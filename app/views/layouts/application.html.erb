<!DOCTYPE html>
<html>
<head>
  <title>SaltyQuotation</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'application', media: 'print', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'application', media: 'print and (color)', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top">
    <!-- <a href="#" id="menu"><span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span></a> -->
    <div class="container">
      <div class="navbar-header"><a class="navbar-brand">SaltyQuotation</a></div>
      <div id="navbar">
        <ul class="nav navbar-nav navbar-right">
         <li ><%= link_to "Home",root_url %></li>
         <li ><%= link_to "Calculator",calculator_url %></li>
         <li><%= link_to "New",new_quotation_url %></li>
         <li><%= link_to "Quotation",quotations_url %></li>
         <% if apparel_consultant_signed_in? %>

         <li><%= link_to "Sign out", destroy_apparel_consultant_session_url, method: :delete %></li>

         <% else %>
           <li><%= link_to "Sign in", new_apparel_consultant_session_url %></li>
         <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="inner">
    <div class="container">
  <%= yield %>
    </div>
  </div>
</body>
</html>
